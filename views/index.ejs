    <script>
      function checkAndSubmit(type) {
        var nameInput = document.getElementById("searchName");
  
        if (type === "name" && nameInput.value.trim() === "") {
          alert("Please enter a product name before searching by name.");
        } else {
          var form = (type === "name") ? document.getElementById("nameForm") : document.getElementById("linkForm");
          form.submit();
        }
      }
