    <!-- Pricing -->

    <section id="pricing">
      <h2 id="price"> <%= searchingtitle %> </h2>
      <p>  Simple and affordable price plans for your product on different Sites </p>
      <div class="product-container">
        <div class="row">

          <% if (cards.length >= 1) { %>
            <% cards.forEach(function (card, index) { %>
          
              <div class="col-lg-6 product-card">
                <div class="card">
                  <div class="img-price">
                    <div class="img-div">
                      <img id="card-image" src="<%= card.image %>" class="d-block w-100" alt="Product Images">
                    </div>
                      <h3 id="pro-brand"><%= card.Brand %></h3>
                      <div class="seller-type">Sold by: <%= card.sellerType %></div>
                      <div class="consignee-qty"><%= card.minQuantity %></div>
                      <form action="/product<%= index + 1 %>" method="post">
                        <button id="pro-butt" type="submit" class="btn btn-outline-danger">Compare Details</button>
                      </form>
                  </div>
                  <div class="card-desc">
                    <h2 id="product-heading"><%= card.ProductName %></h2>
                    <div class="pro-price">
                      <div class="main-div">
                        <h4 id="idds"> GeM  <img id="iddds" src="images/gem.png" alt=""></h4>
                          <div class="pro-div">
                            <div class="items">Price: <%= card.Price %></div>
                            <div class="items">Rating: <%= card.Rating %><i class="star fa-solid fa-star"></i> </div>
                          </div>
                      </div>
                    <div class="main-div">
                      <h4 id="idds"> Flipkart  <img id="iddds-flip" src="images/flipkart.png" alt=""></h4>
                      <div class="pro-div">
                      <div class="items">Price: <%= flipArr[index] %></div>
                      <div class="items">Rating: <%= flipRatingarr[index] %><i class="star fa-solid fa-star"></i> </div>
                    </div>
                    </div>
                    <div class="main-div">
                      <h4 id="idds"> eBay <img id="iddds-ebay" src="images/ebay.png" alt=""></h4>
                      <div class="pro-div">
                        <div class="items">Price: ₹ <%= ebayArr[index] %></div>
                        <div class="items">Rating: <%= ebayRatingarr[index] %><i class="star fa-solid fa-star"></i></div>
                      </div>
                    </div>
                  </div>     
                </div>
              </div>
              </div>
            <% }); %>
          <% } else if (cards.length === 0) { %>
            <% if (Flagg === 1) { %>
              <h2 id="notfound">Product Not found</h2>
            <% } %>
          <% } %>

        </div>
      </div>
    </section>

