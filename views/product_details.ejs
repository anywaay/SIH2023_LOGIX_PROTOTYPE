    <section id="product">
        <div class="product-image">
            <div id="carouselExampleIndicators" class="carousel carousel-dark slide">
                <div class="carousel-indicators">
                  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active " aria-current="true" aria-label="Slide 1"></button>
                  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src=" <%= proImage1 %> " class="d-block w-100" alt="Product Images">
                    
                  </div>
                  <div class="carousel-item">
                    <img src=" <%= proImage2 %>" class="d-block w-100" alt="Product Images">
                  </div>
                  <div class="carousel-item">
                    <img src=" <%= proImage3 %>" class="d-block w-100" alt="Product Images">
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon changeicon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                  <span class="carousel-control-next-icon changeicon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
            </div>

            <div class="product_details">
                <h2 id="pro-head">Product Details</h2>
                <hr id="pro-hr">

                <div class="detail-container">
                    <div class="items detail-tag">Price For :</div>
                    <div class="items detail-info"><%= pro_Pricefor %></div>
                    <div class="items detail-tag">Offer Price/Unit:</div>
                    <div class="items detail-info"> <%= proPrice %></div>
                    <div class="items detail-tag">Availability:</div>
                    <div class="items detail-info"><i class="fa-solid fa-circle-check correct"></i> <%= proStock %> </div>
                    <div class="items detail-tag">Min. Qty. Per Consignee:</div>
                    <div class="items detail-info"><%= proMinqty %></div>
                    <div class="items detail-tag">Product id:</div>
                    <div class="items detail-info"> <%= proId %> </div>
                    <div class="items detail-tag">Country Of Origin:</div>
                    <div class="items detail-info"> <%= proOrigin %> </div>
                </div>
            </div>

            <div class="product_details">
                <h2 id="pro-head">Seller Details</h2>
                <hr id="pro-hr">

                <div class="detail-container">
                    <div class="items detail-tag">Sold by:</div>
                    <div class="items detail-info"> <%= proSellertype  %></div>
                    <div class="items detail-tag"> Seller Status: </div>
                    <div class="items detail-info"><i class="fa-solid fa-circle-check correct"></i> <%= proSellervari %> </div>
                    <div class="items detail-tag">Seller Excellence</div>
                    <div class="items detail-info"> 
                        <div class="seller-rating">
                          <%= proRating %> <i class=" star fa-solid fa-star"></i>
                        </div>
                    </div>
                    <div class="items detail-tag">Seller Details: </div>
                    <div class="items detail-info"> <a id="sellerlink" href=" <%= sellerLink %> ">VIEW ALL SELLERS</a> </div>
                    <!-- <div class="items detail-info"> <a id="sellerlink" href="/sellerdetails">VIEW ALL SELLERS</a> </div> -->
                </div>
            </div>

            <div class="product_details">
                <h2 id="pro-head">Specifications</h2>
                <hr id="pro-hr">

                <div class="detail-container">
                    <div class="items detail-tag">Processor Description</div>
                    <div class="items detail-info"><%= proProcessordesc %> </div>
                    <div class="items detail-tag">Graphic Card: </div>
                    <div class="items detail-info"> <%= proGraphictype %> <%= proGraphicdesc %> </div>
                    <div class="items detail-tag">Operating System</div>
                    <div class="items detail-info"> <%= proOperatingsys %> </div>
                    <div class="items detail-tag">RAM Size(GB)</div>
                    <div class="items detail-info"> <%= proRamsize %></div>
                    <div class="items detail-tag">HDD Capacity(GB)</div>
                    <div class="items detail-info"><%= proHddsize %></div>
                    <div class="items detail-tag">SSD Capacity(GB)</div>
                    <div class="items detail-info"> <%= proSsdsize %></div>
                    <div class="items detail-tag">Display Size (Inch)</div>
                    <div class="items detail-info"> <%= proDisplay %></div>
                    <div class="items detail-tag">On Site OEM Warranty (Years)</div>
                    <div class="items detail-info"> <%= proWarranty %> </div>
                </div>
            </div>

        </div>
        <div class="product-desc">
            <h2 id="productname"><%= proName %> </h2>
            <h3 id="extradesc"><%= proModel %> </h3>
            <h3 id="extrabrand"> Brand: <%= proBrand %></h3>
            <h3 id="price"> <%= proPrice %> </h3>

            <div class="price-comparison">
                <h3 id="price-title">Price on different E-MarketPlaces</h3>
                <div class="price-on-gem least-price">
                    <h2 id="gem-heading"> <%= proName %></h2>
                    <div class="gem-detail">
                        <h2 id="gem-price"> <%= proPrice %> </h2>
                        <img id="gem-logo" src="images/gem.png" alt="Gem Image">
                        <form action="/gemvisit" method="post">
                        <button type="submit" class="btn btn-outline-danger">Visit GeM</button>
                      </form>
                    </div>
                </div>
                <div class="price-on-gem">
                  <h2 id="gem-heading"> <%= flipTitle %></h2>
                  <div class="gem-detail">
                      <h2 id="gem-price"> <%= FlipPrice %> </h2>
                      <img id="gem-logo" src="images/flipkart.png" alt="Gem Image">
                      <form action="/flipkartvisit" method="post">
                      <button type="submit" class="btn btn-outline-danger">Visit Flipkart</button>
                    </form>
                  </div>
                </div>
                <div class="price-on-gem">
                    <h2 id="gem-heading"> <%= ebayName %> </h2>
                    <div class="gem-detail">
                        <h2 id="gem-price"> ₹ <%= ebayPrice %> </h2>
                        <img id="gem-logo" src="images/ebay.png" alt="AmazonImage">
                        <form action="/ebayvisit" method="post">
                        <button type="submit" class="btn btn-outline-danger">Visit eBay</button>
                        </form>
                    </div>
                </div>
                
            </div>

            <div class="pro-graph">
                <h3 id="graph-heading">Product Price Variation</h3>
                <img id="graph-pic" src="images/graphh.jpg" alt="Graph">
            </div>

        </div>
    </section>  
    
