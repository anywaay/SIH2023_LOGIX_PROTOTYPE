<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>SavvyShopper</title>
  <link rel="icon" href="images/favicon2.ico">
  <!-- FontAwesome -->
  <script src="https://kit.fontawesome.com/6cd0737a04.js" crossorigin="anonymous"></script>
  <!-- FontAwesome -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.4/xlsx.full.min.js"></script>

  <!-- google fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=Ubuntu:wght@300&display=swap" rel="stylesheet">
  <!-- google fonts -->


  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  <!-- Bootstrap -->

  <link rel="stylesheet" href="/css/signup.css">
</head>

<body>
   <div class="row popup" id="loginPopup">
    <div class="col-lg-6 sign-in">
        <div class="headerlogin">
            <img class="mb-4 padding" src="images/favicon2.png" alt="Logo" width="10%" height="10%" >
          <h1 class="h1 mb-3 fw-bold padding"> Savvyshopper</h1>
          </div>
        <main class="form-signin col-lg-8 m-auto">
            <form action="/signup" method="post">
              <div class="headerlogin">
              <h1 class="h2 mb-3 fw-normal"> Sign Up</h1>
              </div>
          
              <div class="form-floating">
                <input type="text" class="form-control" id="floatingInput" placeholder="name" name="newName">
                <label for="floatingInput">Name</label>
              </div>

              <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="newemail">
                <label for="floatingInput">Email address</label>
              </div>
              <div class="form-floating">
                <input type="text" class="form-control" id="floatingInput" placeholder="Uttar Pradesh" name="newstate">
                <label for="floatingInput">Your State</label>
              </div>
              <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="newpass">
                <label for="floatingPassword">Password</label>
              </div>
          
              <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                  Remember me
                </label>
              </div>
              <button class="btn btn-primary w-100 py-2" type="submit" name="submit">Sign in</button>
             
              <p class="padding">
                <a class="padding" href="/login">Not a New User! Log In</a>
                <br>
                <p class="mt-3 mb-3 text-muted"> ShavvyShopper &copy; 2023</p>
            </form>
        </main>
    </div>
   </div>
</body>
</html>